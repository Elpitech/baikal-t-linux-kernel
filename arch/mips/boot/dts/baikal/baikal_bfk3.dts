/dts-v1/;

#include <dt-bindings/interrupt-controller/mips-gic.h>
#include <dt-bindings/gpio/gpio.h>

#include  "baikal_t1_soc.dtsi"
#include  "baikal_mdio.dtsi"

/ {
	model = "Baikal-T1 BFK3 evaluation board";
	compatible = "baikal,mips", "baikal,baikal-t1-soc", "baikal,baikal-bfk3-eval-board";
	#address-cells = <1>;
	#size-cells = <1>;

	chosen {
		bootargs = "root=/dev/ram rw rootwait console=ttyS0,115200n8 earlyprintk=uart8250,mmio32,0x1F04A000,115200 maxcpus=2 nohtw";
		linux,initrd-start = <0x01000000>;
		linux,initrd-end   = <0x02000000>;
	};

	memory {
		device_type = "memory";
		reg = <0x00000000 0x08000000>,
		      <0x20000000 0xC0000000>;
	};
};

&usb {
	status = "okay";
};

&sata {
	status = "okay";
};

&pci {
	status = "okay";
};

&xgmac {
	status = "okay";
};

&gmac0 {
	status = "okay";
};

&gmac1 {
	status = "okay";
};

&gpio {
	status = "okay";
};

&gpio3 {
	status = "okay";
};

&i2c0 {
};

&i2c1 {
	rtc@56 {
		compatible = "abracon,abeoz9s3";
		reg = <0x56>;
	};
};

&uart1 {
	status = "okay";
};

&spi0 {
	reg-io-width = <4>;
	num-cs = <2>;
	cs-gpios = <&portb 0 GPIO_ACTIVE_LOW>,
			   <&portb 1 GPIO_ACTIVE_LOW>;

	status = "okay";

	flash@1 {
		#address-cells = <1>;
		#size-cells = <1>;
		status = "okay";
		compatible = "micron,n25q256a", "jedec,spi-nor";
		reg = <1>;
		spi-max-frequency = <10000000>;
		/* m25p,fast-read; */

		mtd@00000000 {
			label = "flash0";
			reg = <0x00000000 0x02000000>;
		};
	};
};

&spi1 {
	num-cs = <1>;
	cs-gpios = <&portb 2 GPIO_ACTIVE_LOW>;

	status = "okay";
};

&pvt {
	status = "okay";
};

&efuse {
	status = "okay";
};
