/ {
	/* Reserve memory regions for CMA and NTB */
	reserved-memory {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		/* Reserve 3MB for various CMA-based things (ntb_tool, etc) */
		cma_reserved {
			compatible = "shared-dma-pool";
			size = <0x300000>;
			reusable;
			linux,cma-default;
		};
	};

	/*
	 * Pseudo-device with watchdog timer GPIO-pins declaration. It will be
	 * used in CNC NTB driver to notify CU of possible peripheral board
	 * hang ups.
	 */
	cnc_wd_gpio {
		wd_setup-gpios = <&porta 2  GPIO_ACTIVE_HIGH>, /* wd_set pin */
				 <&porta 27 GPIO_ACTIVE_HIGH>; /* wd_in  pin */
	};

	/*
	 * Pseudo-device with descrete in GPIO-expanders IRQ lines declaration.
	 * They are used by CNC IN driver logic to notify CU of various
	 * external events.
	 */
	cnc_in_gpio {
		cnc_in_brd0-gpios = <&porta 31 GPIO_ACTIVE_HIGH>, /* Local expander #0 */
				    <&porta 29 GPIO_ACTIVE_HIGH>; /* Local expander #1 */
		cnc_in_brd1-gpios = <&porta 23 GPIO_ACTIVE_HIGH>, /* External expander #0 */
				    <&porta 21 GPIO_ACTIVE_HIGH>; /* External expander #1 */
		cnc_in_brd2-gpios = <&porta 15 GPIO_ACTIVE_HIGH>, /* External expander #0 */
				    <&porta 13 GPIO_ACTIVE_HIGH>; /* External expander #1 */
		cnc_in_probe-gpios = <&porta 28 GPIO_ACTIVE_HIGH>, /* Probe input #24 */
				     <&porta 24 GPIO_ACTIVE_HIGH>, /* Probe input #25 */
				     <&porta 8  GPIO_ACTIVE_HIGH>, /* Probe input #26 */
				     <&porta 20 GPIO_ACTIVE_HIGH>, /* Probe input #27 */
				     <&porta 19 GPIO_ACTIVE_HIGH>, /* Probe input #28 */
				     <&porta 17 GPIO_ACTIVE_HIGH>, /* Probe input #29 */
				     <&porta 10 GPIO_ACTIVE_HIGH>, /* Probe input #30 */
				     <&porta 18 GPIO_ACTIVE_HIGH>; /* Probe input #31 */
	};
};

&usb {
	status = "disabled";
};

&sata {
	status = "disabled";
};

&mdio0 {
	status = "disabled";
};

&xgmac {
	status = "disabled";
};

&gmac0 {
	status = "disabled";
};

&gmac1 {
	status = "disabled";
};

/*
 * Relay/DescreteIn GPIO-expanders are placed right on i2c0 for early
 * developed boards and under i2c0 subbuses for rev.3 and newer.
 */
&i2c0 {
	status = "okay";

	/* Switch is available on rev.3 boards only */
	i2c0_exp_sw@70 {
		compatible = "nxp,pca9546";
		reg = <0x70>;
		#address-cells = <1>;
		#size-cells = <0>;
		idle-state = <3>; /* Unused channel is connected on idle */

		/* Bus #2 with local GPIO-expanders */
		local_exp_smb: i2c0_exp@0 {
			reg = <0>;
			#address-cells = <1>;
			#size-cells = <0>;
		};

		/* Bus #3 with external GPIO-expanders */
		ext0_exp_smb: i2c0_exp@1 {
			reg = <1>;
			#address-cells = <1>;
			#size-cells = <0>;
		};

		/* Bus #4 with external GPIO-expanders */
		ext1_exp_smb: i2c0_exp@2 {
			reg = <2>;
			#address-cells = <1>;
			#size-cells = <0>;
		};
	};
};

/* Board settings devices */
&i2c1 {
	status = "okay";

	shred@21 {
		compatible = "nxp,pcf8574";
		reg = <0x21>;
		gpio-controller;
		#gpio-cells = <2>;
		ngpios = <8>; /* Informative */
	};

	func@22 {
		compatible = "nxp,pcf8574";
		reg = <0x22>;
		gpio-controller;
		#gpio-cells = <2>;
		ngpios = <8>; /* Informative */
	};

	bayid@23 {
		compatible = "nxp,pcf8574";
		reg = <0x23>;
		gpio-controller;
		#gpio-cells = <2>;
		ngpios = <8>; /* Informative */
	};

        eeprom@57 {
                compatible = "atmel,24c32";
                reg = <0x57>;
                pagesize = <16>;
        };
};

&uart1 {
	status = "disabled";
};

&spi0 {
	status = "disabled";
};

&spi1 {
	status = "disabled";
};
